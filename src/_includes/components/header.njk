<a class="skip-link" href="#main">Skip to content</a>

<header class="site-header">
  <div class="container">
    <div class="header-inner">
      <a class="brand" href="/" aria-label="{{ site.brand }} home">
        <img src="{{ site.logo or '/assets/img/logo.svg' }}" alt="{{ site.brand }}" />
      </a>

      <nav class="site-nav" aria-label="Primary">
        {% for item in site.nav %}
          {% if item.children %}
            <details class="nav-group">
              <summary>{{ item.label }}</summary>
              <div class="nav-dropdown" role="menu">
                {% for child in item.children %}
                  {% if child.children %}
                    <div class="subtle">{{ child.label }}</div>
                    {% for sub in child.children %}
                      <a role="menuitem" href="{{ sub.url }}">{{ sub.label }}</a>
                    {% endfor %}
                  {% else %}
                    <a role="menuitem" href="{{ child.url }}">{{ child.label }}</a>
                  {% endif %}
                {% endfor %}
              </div>
            </details>
          {% else %}
            <a href="{{ item.url }}" {% if page.url == item.url %}aria-current="page"{% endif %}>
              {{ item.label }}
            </a>
          {% endif %}
        {% endfor %}
      </nav>

      <div class="top-actions">
        <a class="cart-link" href="/cart/" aria-label="Cart">
          Cart <span class="cart-count" data-cart-count>0</span>
        </a>
        <button class="btn nav-toggle" type="button" data-nav-toggle aria-expanded="false" aria-controls="mobile-drawer">
          â˜° Menu
        </button>
      </div>
    </div>
  </div>
</header>

<div class="drawer-backdrop" data-drawer-backdrop></div>
<aside id="mobile-drawer" class="drawer" data-drawer aria-label="Mobile menu">
  <div class="split">
    <strong style="font-size:14px; letter-spacing:.4px;">Menu</strong>
    <button class="btn" type="button" data-nav-toggle aria-expanded="true" aria-controls="mobile-drawer">âœ• Close</button>
  </div>

  <hr />

  <a class="cart-link" href="/cart/" style="justify-content:space-between;">
    Cart <span class="cart-count" data-cart-count>0</span>
  </a>

  {% for item in site.nav %}
    {% if item.children %}
      <h4>{{ item.label }}</h4>
      {% for child in item.children %}
        {% if child.children %}
          <h4 style="margin-top:10px;">{{ child.label }}</h4>
          {% for sub in child.children %}
            <a href="{{ sub.url }}">{{ sub.label }}</a>
          {% endfor %}
        {% else %}
          <a href="{{ child.url }}">{{ child.label }}</a>
        {% endif %}
      {% endfor %}
    {% else %}
      <a href="{{ item.url }}">{{ item.label }}</a>
    {% endif %}
  {% endfor %}

  <hr />

  <div class="badge" title="{{ site.hours }}">ðŸ“ž {{ site.phone }}</div>
  <div class="small" style="margin-top:10px;">
    {{ site.tagline }}
  </div>
</aside>
